{
  "name": "truthlens",
  "version": "1.0.0",
  "description": "Real-time content verification Chrome extension for Gen Z",
  "author": "TruthLens Team",
  "license": "MIT",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "webpack --config webpack/webpack.dev.cjs --watch",
    "build": "npm run clean && webpack --config webpack/webpack.prod.cjs",
    "build:analyze": "npm run clean && webpack --config webpack/webpack.prod.cjs --analyze",
    "build:nocsp": "npm run clean && webpack --config webpack/webpack.prod.cjs --env nocsp",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,scss}\"",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "package": "npm run build && node scripts/package.js",
    "precommit": "lint-staged",
    "security:scan": "eslint src --ext .ts,.tsx --format @microsoft/eslint-formatter-sarif --output-file eslint-security.sarif",
    "bundle:check": "node scripts/bundle-size-check.js",
    "memory:test": "node scripts/memory-test.js",
    "version:update": "node scripts/update-version.js",
    "release:notes": "node scripts/generate-release-notes.js",
    "deploy:configure": "node scripts/configure-rollout.js",
    "pipeline:health": "node scripts/pipeline-health-check.js",
    "size:check": "size-limit",
    "csp-audit": "tsx scripts/csp-audit.ts",
    "csp-audit:watch": "tsx scripts/csp-audit.ts watch",
    "csp-audit:json": "tsx scripts/csp-audit.ts json",
    "lexicon:discover": "tsx scripts/lexicon-updater.ts discover",
    "lexicon:review": "tsx scripts/lexicon-updater.ts review",
    "lexicon:integrate": "tsx scripts/lexicon-updater.ts integrate",
    "lexicon:stats": "tsx scripts/lexicon-updater.ts stats",
    "lexicon:submit": "tsx scripts/lexicon-updater.ts submit",
    "lexicon:pipeline": "tsx scripts/lexicon-updater.ts pipeline"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "classnames": "^2.5.1",
    "date-fns": "^3.6.0",
    "dompurify": "^3.2.2",
    "emoji-regex": "^10.4.0",
    "humanize-plus": "^1.8.2",
    "lodash-es": "^4.17.21",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "timeago.js": "^4.0.2",
    "tldts": "^6.1.86",
    "url-parse": "^1.5.10",
    "url-pattern": "^1.0.3",
    "validator": "^13.12.0",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.0-beta.3",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "@playwright/test": "^1.45.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.0.269",
    "@types/humanize-plus": "^1.8.2",
    "@types/jest": "^29.5.12",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/url-parse": "^1.4.11",
    "@types/validator": "^13.12.2",
    "@types/webextension-polyfill": "^0.10.7",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "dotenv": "^16.4.5",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "^3.0.1",
    "glob": "^10.4.5",
    "globals": "^16.2.0",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-webextension-mock": "^4.0.0",
    "lighthouse": "^12.0.0",
    "lint-staged": "^15.2.7",
    "mini-css-extract-plugin": "^2.9.0",
    "prettier": "^3.3.2",
    "puppeteer": "^23.0.0",
    "rimraf": "^5.0.7",
    "sass": "^1.77.6",
    "sass-loader": "^14.2.1",
    "size-limit": "^11.0.0",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "ts-jest": "^29.1.5",
    "ts-loader": "^9.5.1",
    "tsx": "^4.7.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.33.1",
    "webpack": "^5.92.1",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^6.0.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
