{
  "$schema": "https://repomix.com/schemas/latest/schema.json",
  "version": "2.0",
  "input": {
    "maxFileSize": 5000000,
    "encoding": "utf-8",
    "respectGitignore": true,
    "followSymlinks": false,
    "include": [
      "src/**/*.{ts,tsx,js,jsx,json,d.ts,css}",
      "tests/**/*.{ts,tsx,js,test.ts,spec.ts}",
      "webpack/**/*.{js,ts}",
      "public/manifest.json",
      "public/offscreen.html",
      "docs/education/**/*",
      "docs/videos/**/*",
      "docs/index.html",
      "docs/scripts/*.js",
      "docs/styles/*.css",
      ".github/workflows/*.{yml,yaml}",
      "scripts/package.js",
      "scripts/update-version.js",
      "*.json",
      "webpack.*.js",
      "tsconfig*.json",
      "eslint.config.js",
      "jest.config.cjs",
      "playwright.config.ts",
      "README.md"
    ],
    "ignore": {
      "useGitignore": true,
      "useDefaultPatterns": true,
      "customPatterns": [
        "**/*.{png,jpg,jpeg,gif,svg,ico,icns,webp,bmp,tiff}",
        "**/*.{mp4,mp3,wav,avi,mov,wmv,flv,ogg,webm}",
        "**/*.{zip,tar,gz,rar,7z,bz2,crx,pem}",
        "**/*.{pdf,doc,docx,xls,xlsx,ppt,pptx}",
        "**/*.{sql,db,sqlite}",
        "**/*.{csv,tsv}",
        "**/*.min.{js,css}",
        "**/*.{woff,woff2,ttf,eot,otf}",
        "**/*.snap",
        "**/*.stories.@(ts|tsx|js|jsx|mdx)",
        "**/.env*",
        "**/package-lock.json",
        "**/yarn.lock",
        "**/pnpm-lock.yaml",
        "**/dist/**",
        "**/build/**",
        "**/coverage/**",
        "**/playwright-report/**",
        "**/test-results/**",
        "**/tests/e2e/screenshots/**",
        "**/tests/e2e/videos/**",
        "**/tests/e2e/downloads/**",
        "**/*.backup.*",
        "**/logs/**",
        "**/tmp/**",
        "**/temp/**",
        "**/*.map",
        "**/node_modules/**",
        "**/repomix-output*.md",
        "**/repomix-output*.xml",
        "**/.DS_Store",
        "**/Thumbs.db",
        "**/desktop.ini",
        "**/*.bak",
        "**/tasks.json.bak",
        "**/.claude/**",
        "**/CLAUDE.md",
        "**/tasks/**",
        "**/store-assets/**",
        "**/pre-prd.md",
        "**/truth-lens-plan.md",
        "**/prd.txt",
        "**/regex-replacement-implementation-proposal.md",
        "**/replacements-for-regex.md",
        "**/docs/*phase*.md",
        "**/docs/*-report.md",
        "**/docs/*-analysis.md",
        "**/docs/ci-cd-pipeline.md",
        "**/docs/fact-checking-api-2025-best-practices.md",
        "**/scripts/bundle-size-check.js",
        "**/scripts/configure-rollout.js",
        "**/scripts/csp-audit.*",
        "**/scripts/generate-release-notes.js",
        "**/scripts/memory-test.js",
        "**/scripts/notify-deployment.js",
        "**/scripts/pipeline-health-check.js",
        "**/scripts/prd.txt"
      ]
    }
  },
  "processing": {
    "contentFilters": {
      "removeTestData": false,
      "removeMockData": false,
      "removeGeneratedCode": [
        "*.generated.*",
        "*.d.ts",
        "*-lock.json",
        "*-lock.yaml",
        "*.d.ts.map"
      ],
      "minifyJSON": false,
      "normalizeWhitespace": true
    },
    "codeProcessing": {
      "removeComments": false,
      "removeEmptyLines": false,
      "trimTrailingWhitespace": true,
      "normalizeLineEndings": "lf",
      "preserveStringLiterals": true
    },
    "contextEnhancement": {
      "extractImports": true,
      "extractExports": true,
      "extractDependencies": true,
      "extractTodos": true,
      "includeGitInfo": true,
      "includeFileStats": true
    }
  },
  "output": {
    "filePath": "repomix-output.md",
    "style": "markdown",
    "format": "structured",
    "compress": true,
    "splitThreshold": 2000000,
    "headerText": "# TruthLens Chrome Extension\n\nAI-powered fact-checking and bias detection Chrome extension for social media platforms.\n\n## Tech Stack\n- Chrome Extension Manifest V3\n- React + TypeScript\n- Webpack 5\n- Chrome Built-in AI (Gemini Nano)\n- Platform-specific content extractors\n",
    "fileSummary": true,
    "directoryStructure": true,
    "showLineNumbers": true,
    "parsableStyle": false,
    "includeEmptyFiles": false,
    "groupByType": true,
    "sortBy": "priority",
    "tableOfContents": true,
    "sectionHeaders": true,
    "includeTimestamp": true,
    "includeMetrics": true,
    "includeTreemap": true
  },
  "security": {
    "enableChecks": true,
    "excludeSuspiciousFiles": true,
    "hideSensitiveData": true,
    "scanForSecrets": true,
    "secretPatterns": [
      "api[_-]?key",
      "secret[_-]?key",
      "password",
      "token",
      "bearer",
      "private[_-]?key",
      "ssh[_-]?key",
      "MBFC_API_KEY",
      "GOOGLE_FACT_CHECK_API_KEY",
      "ghp_[A-Za-z0-9]{36}",
      "ghs_[A-Za-z0-9]{36}",
      "github_pat_[A-Za-z0-9]{22}_[A-Za-z0-9]{59}"
    ],
    "redactPatterns": [
      "process\\.env\\.\\w+",
      "\\b[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Z|a-z]{2,}\\b",
      "\\b(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\b"
    ]
  },
  "tokens": {
    "enableCounting": true,
    "provider": "tiktoken",
    "model": "gpt-4o",
    "includeBreakdown": true,
    "warningThreshold": 100000,
    "errorThreshold": 200000
  },
  "ai": {
    "contextOptimization": true,
    "includeArchitectureHints": true,
    "includeDependencyGraph": true,
    "includeTestCoverage": false,
    "includeLintResults": false
  },
  "advanced": {
    "parallelProcessing": true,
    "cacheEnabled": true,
    "incrementalMode": true,
    "watchMode": false,
    "customTransformers": [],
    "hooks": {
      "beforeProcess": "npm run lint --silent || true",
      "afterProcess": null,
      "onError": "continue"
    }
  },
  "validation": {
    "strictMode": false,
    "validateImports": true,
    "checkCircularDependencies": true,
    "reportUnusedExports": false,
    "reportMissingTypes": false
  }
}
